{
  "name": "gammaui",
  "version": "0.1.0",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "js-yaml": "^4.1.1",
    "lefthook": "^2.0.4",
    "turbo": "^2.6.1",
    "ultracite": "^6.3.5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "bun": ">=1.1.43"
  },
  "packageManager": "bun@1.1.43",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow bun",
    "dev": "bunx turbo run dev --parallel",
    "build": "bunx turbo run build",
    "start": "bunx turbo run start",
    "lint": "bunx turbo run lint",
    "lint:fix": "bunx turbo run lint:fix",
    "typecheck": "bunx turbo run typecheck",
    "format:fix": "bunx turbo run format:fix",
    "format:fix:silent": "bunx turbo run format:fix -- --log-level silent",
    "format:check": "bunx turbo run format:check",
    "build:docs": "bunx turbo run build:docs --filter=www",
    "build:registry": "bunx turbo run build:registry --filter=www && bunx turbo run lint:fix --filter=www && bunx turbo run format:fix:silent",
    "check": "bunx turbo run lint && bunx turbo run typecheck && bunx turbo run format:check"
  },
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
