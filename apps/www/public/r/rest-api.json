{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "rest-api",
  "type": "registry:ui",
  "title": "Rest API",
  "description": "A beautifully animated REST API visualization component with SVG paths, glowing lights, badges, and interactive motion effects.",
  "dependencies": [
    "react",
    "@tabler/icons-react",
    "motion"
  ],
  "files": [
    {
      "path": "registry/gammaui/rest-api.tsx",
      "content": "\"use client\"\n\nimport React from \"react\"\nimport {\n  IconFolder,\n  IconHeartHandshake,\n  IconSparkles,\n} from \"@tabler/icons-react\"\nimport { motion } from \"motion/react\"\nimport { useTheme } from \"next-themes\"\n\nimport { cn } from \"@/lib/utils\"\n\ninterface RestApiProps {\n  className?: string\n  circleText?: string\n  badgeTexts?: {\n    first: string\n    second: string\n    third: string\n    fourth: string\n  }\n  buttonTexts?: {\n    first: string\n    second: string\n  }\n  title?: string\n  lightColor?: string\n}\n\nexport default function RestApi({\n  className,\n  circleText,\n  badgeTexts,\n  buttonTexts,\n  title,\n  lightColor,\n}: RestApiProps) {\n  const { resolvedTheme } = useTheme()\n  return (\n    <div\n      className={cn(\n        \"relative flex h-[350px] w-full max-w-[500px] flex-col items-center\",\n        className\n      )}\n    >\n      {/* SVG Paths  */}\n      <svg\n        className=\"text-muted h-full sm:w-full\"\n        width=\"100%\"\n        height=\"100%\"\n        viewBox=\"0 0 200 100\"\n      >\n        <g\n          stroke=\"currentColor\"\n          fill=\"none\"\n          strokeWidth=\"0.4\"\n          strokeDasharray=\"100 100\"\n          pathLength=\"100\"\n        >\n          <path d=\"M 31 10 v 15 q 0 5 5 5 h 59 q 5 0 5 5 v 10\" />\n          <path d=\"M 77 10 v 10 q 0 5 5 5 h 13 q 5 0 5 5 v 10\" />\n          <path d=\"M 124 10 v 10 q 0 5 -5 5 h -14 q -5 0 -5 5 v 10\" />\n          <path d=\"M 170 10 v 15 q 0 5 -5 5 h -60 q -5 0 -5 5 v 10\" />\n          {/* Animation For Path Starting */}\n          <animate\n            attributeName=\"stroke-dashoffset\"\n            from=\"100\"\n            to=\"0\"\n            dur=\"1s\"\n            fill=\"freeze\"\n            calcMode=\"spline\"\n            keySplines=\"0.25,0.1,0.5,1\"\n            keyTimes=\"0; 1\"\n          />\n        </g>\n        {/* Blue Lights */}\n        <g mask=\"url(#db-mask-1)\">\n          <circle\n            className=\"database db-light-1\"\n            cx=\"0\"\n            cy=\"0\"\n            r=\"12\"\n            fill=\"url(#db-blue-grad)\"\n          />\n        </g>\n        <g mask=\"url(#db-mask-2)\">\n          <circle\n            className=\"database db-light-2\"\n            cx=\"0\"\n            cy=\"0\"\n            r=\"12\"\n            fill=\"url(#db-blue-grad)\"\n          />\n        </g>\n        <g mask=\"url(#db-mask-3)\">\n          <circle\n            className=\"database db-light-3\"\n            cx=\"0\"\n            cy=\"0\"\n            r=\"12\"\n            fill=\"url(#db-blue-grad)\"\n          />\n        </g>\n        <g mask=\"url(#db-mask-4)\">\n          <circle\n            className=\"database db-light-4\"\n            cx=\"0\"\n            cy=\"0\"\n            r=\"12\"\n            fill=\"url(#db-blue-grad)\"\n          />\n        </g>\n        {/* Buttons */}\n        <g stroke=\"currentColor\" fill=\"none\" strokeWidth=\"0.4\">\n          {/* First Button */}\n          <g>\n            <rect\n              fill=\"#18181B\"\n              x=\"14\"\n              y=\"5\"\n              width=\"34\"\n              height=\"10\"\n              rx=\"5\"\n            ></rect>\n            <DatabaseIcon x=\"18\" y=\"7.5\"></DatabaseIcon>\n            <text\n              x=\"28\"\n              y=\"12\"\n              fill=\"white\"\n              stroke=\"none\"\n              fontSize=\"5\"\n              fontWeight=\"500\"\n            >\n              {badgeTexts?.first || \"GET\"}\n            </text>\n          </g>\n          {/* Second Button */}\n          <g>\n            <rect\n              fill=\"#18181B\"\n              x=\"60\"\n              y=\"5\"\n              width=\"34\"\n              height=\"10\"\n              rx=\"5\"\n            ></rect>\n            <DatabaseIcon x=\"64\" y=\"7.5\"></DatabaseIcon>\n            <text\n              x=\"74\"\n              y=\"12\"\n              fill=\"white\"\n              stroke=\"none\"\n              fontSize=\"5\"\n              fontWeight=\"500\"\n            >\n              {badgeTexts?.second || \"POST\"}\n            </text>\n          </g>\n          {/* Third Button */}\n          <g>\n            <rect\n              fill=\"#18181B\"\n              x=\"108\"\n              y=\"5\"\n              width=\"34\"\n              height=\"10\"\n              rx=\"5\"\n            ></rect>\n            <DatabaseIcon x=\"112\" y=\"7.5\"></DatabaseIcon>\n            <text\n              x=\"122\"\n              y=\"12\"\n              fill=\"white\"\n              stroke=\"none\"\n              fontSize=\"5\"\n              fontWeight=\"500\"\n            >\n              {badgeTexts?.third || \"PUT\"}\n            </text>\n          </g>\n          {/* Fourth Button */}\n          <g>\n            <rect\n              fill=\"#18181B\"\n              x=\"150\"\n              y=\"5\"\n              width=\"40\"\n              height=\"10\"\n              rx=\"5\"\n            ></rect>\n            <DatabaseIcon x=\"154\" y=\"7.5\"></DatabaseIcon>\n            <text\n              x=\"165\"\n              y=\"12\"\n              fill=\"white\"\n              stroke=\"none\"\n              fontSize=\"5\"\n              fontWeight=\"500\"\n            >\n              {badgeTexts?.fourth || \"DELETE\"}\n            </text>\n          </g>\n        </g>\n        <defs>\n          {/* 1 -  user list */}\n          <mask id=\"db-mask-1\">\n            <path\n              d=\"M 31 10 v 15 q 0 5 5 5 h 59 q 5 0 5 5 v 10\"\n              strokeWidth=\"0.5\"\n              stroke=\"white\"\n            />\n          </mask>\n          {/* 2 - task list */}\n          <mask id=\"db-mask-2\">\n            <path\n              d=\"M 77 10 v 10 q 0 5 5 5 h 13 q 5 0 5 5 v 10\"\n              strokeWidth=\"0.5\"\n              stroke=\"white\"\n            />\n          </mask>\n          {/* 3 - backlogs */}\n          <mask id=\"db-mask-3\">\n            <path\n              d=\"M 124 10 v 10 q 0 5 -5 5 h -14 q -5 0 -5 5 v 10\"\n              strokeWidth=\"0.5\"\n              stroke=\"white\"\n            />\n          </mask>\n          {/* 4 - misc */}\n          <mask id=\"db-mask-4\">\n            <path\n              d=\"M 170 10 v 15 q 0 5 -5 5 h -60 q -5 0 -5 5 v 10\"\n              strokeWidth=\"0.5\"\n              stroke=\"white\"\n            />\n          </mask>\n          {/* Blue Grad */}\n          <radialGradient id=\"db-blue-grad\" fx=\"1\">\n            <stop offset=\"0%\" stopColor={lightColor || \"#00A6F5\"} />\n            <stop offset=\"100%\" stopColor=\"transparent\" />\n          </radialGradient>\n        </defs>\n      </svg>\n      {/* Main Box */}\n      <div className=\"absolute bottom-10 flex w-full flex-col items-center\">\n        {/* bottom shadow */}\n        <div className=\"bg-accent/30 absolute -bottom-4 h-[100px] w-[62%] rounded-lg\" />\n        {/* box title */}\n        <div className=\"absolute -top-3 z-20 flex items-center justify-center rounded-lg border bg-[#101112] px-2 py-1 sm:-top-4 sm:py-1.5\">\n          <IconSparkles className=\"size-3 text-white\" />\n          <span className=\"ml-2 text-[10px] text-white\">\n            {title ? title : \"Data exchange using a customized REST API\"}\n          </span>\n        </div>\n        {/* box outter circle */}\n        <div className=\"absolute -bottom-8 z-30 grid h-[60px] w-[60px] place-items-center rounded-full border-t bg-[#141516] text-xs font-semibold text-white\">\n          {circleText ? circleText : \"SVG\"}\n        </div>\n        {/* box content */}\n        <div className=\"bg-background relative z-10 flex h-[150px] w-full items-center justify-center overflow-hidden rounded-lg border shadow-md\">\n          {/* Badges */}\n          <div className=\"absolute bottom-8 left-12 z-10 flex h-7 items-center gap-2 rounded-full border bg-[#101112] px-3 text-xs text-white\">\n            <IconHeartHandshake className=\"size-4\" />\n            <span>{buttonTexts?.first || \"Gamma UI\"}</span>\n          </div>\n          <div className=\"absolute right-16 z-10 hidden h-7 items-center gap-2 rounded-full border bg-[#101112] px-3 text-xs text-white sm:flex\">\n            <IconFolder className=\"size-4\" />\n            <span>{buttonTexts?.second || \"v2_updates\"}</span>\n          </div>\n          {/* Circles */}\n          <motion.div\n            className=\"bg-accent/5 absolute -bottom-14 h-[100px] w-[100px] rounded-full border-t\"\n            animate={{\n              scale: [0.98, 1.02, 0.98, 1, 1, 1, 1, 1, 1],\n            }}\n            transition={{ duration: 2, repeat: Infinity }}\n          />\n          <motion.div\n            className=\"bg-accent/5 absolute -bottom-20 h-[145px] w-[145px] rounded-full border-t\"\n            animate={{\n              scale: [1, 1, 1, 0.98, 1.02, 0.98, 1, 1, 1],\n            }}\n            transition={{ duration: 2, repeat: Infinity }}\n          />\n          <motion.div\n            className=\"bg-accent/5 absolute -bottom-[100px] h-[190px] w-[190px] rounded-full border-t\"\n            animate={{\n              scale: [1, 1, 1, 1, 1, 0.98, 1.02, 0.98, 1, 1],\n            }}\n            transition={{ duration: 2, repeat: Infinity }}\n          />\n          <motion.div\n            className=\"bg-accent/5 absolute -bottom-[120px] h-[235px] w-[235px] rounded-full border-t\"\n            animate={{\n              scale: [1, 1, 1, 1, 1, 1, 0.98, 1.02, 0.98, 1],\n            }}\n            transition={{ duration: 2, repeat: Infinity }}\n          />\n        </div>\n      </div>\n    </div>\n  )\n}\n\nconst DatabaseIcon = ({ x = \"0\", y = \"0\" }: { x: string; y: string }) => {\n  return (\n    <svg\n      x={x}\n      y={y}\n      xmlns=\"http://www.w3.org/2000/svg\"\n      width=\"5\"\n      height=\"5\"\n      viewBox=\"0 0 24 24\"\n      fill=\"none\"\n      stroke=\"white\"\n      strokeWidth=\"2\"\n      strokeLinecap=\"round\"\n      strokeLinejoin=\"round\"\n    >\n      <ellipse cx=\"12\" cy=\"5\" rx=\"9\" ry=\"3\" />\n      <path d=\"M3 5V19A9 3 0 0 0 21 19V5\" />\n      <path d=\"M3 12A9 3 0 0 0 21 12\" />\n    </svg>\n  )\n}\n",
      "type": "registry:ui"
    }
  ]
}